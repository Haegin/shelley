echo
printf "%s\n" "        __  ___  __   __       "
printf "%s\n" "|__| | /__\`  |  /  \ |__) \ /  "
printf "%s\n" "|  | | .__/  |  \__/ |  \  |    "
echo

mkdir animal vegetable mineral
mkdir animal/{mammal,reptile,bird}

touch animal/mammal/{human,cat,dog,horse,whale}
touch animal/reptile/{snake,gecko,dinosaur}
touch animal/bird/{eagle,hawk,sparrow}

mkdir vegetable/tree
touch vegetable/tree/{ash,oak,elm,beech,fir,"scots pine"}
touch vegetable/{carrot,broccoli,"broad bean",peanut}

touch mineral/{quartz,diamond,gold,silver,tin}

ls -R animal vegetable mineral
