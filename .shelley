alias start="git checkout slides/intro"
function next() {
  current_slide=$(git name-rev --name-only HEAD)
  current_slide_index=$(grep -x -n ${current_slide#slides/} slides/index | cut -d':' -f 1)
  next_slide=$(head -n $(( $current_slide_index + 1 )) slides/index | tail -n 1)
  git checkout "slides/${next_slide}"
}
